{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2020",
    "lib": [
      "dom",
      "es2019"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ]
}
